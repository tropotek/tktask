{
  "name": "ttek/tk8base",
  "type": "project",
  "description": "A base example site using the tropotek tk v8 libs.",
  "keywords": [
    "tropotek"
  ],
  "time": "2022-10-17",
  "license": "MIT",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Michael Mifsud",
      "homepage": "www.tropotek.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Tk\\Composer\\Installer::postInstall"
    ],
    "post-update-cmd": [
      "Tk\\Composer\\Installer::postUpdate"
    ]
  },

  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-dom": "*",
    "ext-libxml": "*",

    "ttek/tk-framework": "~8.0.0",
    "ttek/tk-auth": "~8.0.0",
    "ttek/tk-domtemplate": "~8.0.0",
    "ttek/tk-table": "~8.0.0",
    "ttek/tk-form": "~8.0.0",
    "ttek/tk-mail": "~8.0.0",
    "ttek/tk-base": "~8.0.0",

    "components/jquery": "~3.6.0",
    "components/jqueryui": "~1.12.0",
    "components/font-awesome": "~6.2.0",
    "twbs/bootstrap": "~5.3.0",
		"select2/select2": "~4.0",
    "studio-42/elfinder": "~2.1.0"
  },
  "require-dev": {
    "composer/composer": "^2.0",
    "phpstan/phpstan": "1.11.x-dev"
  },

  "config": {
    "allow-plugins": {
      "ttek/tk-installers": true
    },
    "preferred-install": {
      "ttek/*": "source"
    },
    "component-dir": "vendor/components"
  }
}
