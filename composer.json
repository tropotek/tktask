{
    "name": "ttek/tktask",
    "type": "project",
    "description": "Developer customer management app",
    "keywords":  [
        "tropotek"
    ],
    "time": "2025-04-20",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors":  [
         {
            "name": "Tropotek",
            "homepage": "http://www.tropotek.com/"
        }
    ],
    "autoload":  {
        "psr-4":  {
            "App\\": "src/App/"
        }
    },
    "scripts":  {
        "post-install-cmd":  [
            "Tk\\Composer\\Installer::postInstall"
        ],
        "post-update-cmd":  [
            "Tk\\Composer\\Installer::postUpdate"
        ]
    },
    "extra":  {
        "branch-alias":  {
            "dev-master": "1.0.x-dev"
        }
    },
    "repositories":  [
         {
            "type": "package",
            "package":  {
                "name": "htmx/htmx",
                "version": "2.0.4",
                "dist":  {
                    "url": "https://unpkg.com/htmx.org/dist/htmx.min.js",
                    "type": "file"
                }
            }
        }
    ],
    "require":  {
        "php": "^8.3",
        "ext-curl": "*",
        "ext-pdo": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ttek/tk-base": "~8.0.0",
        "htmx/htmx": "2.0.4",
        "components/jquery": "~3.6.0",
        "components/jqueryui": "~1.12.0",
        "components/font-awesome": "~6.2.0",
        "twbs/bootstrap": "~5.3.0",
        "studio-42/elfinder": "~2.1.0",
        "mpdf/mpdf": "^8.0"
    },
    "require-dev":  {
        "composer/composer": "^2.0"
    },
    "config":  {
        "allow-plugins":  {
            "ttek/tk-installers": true
        },
        "preferred-install":  {
            "ttek/*": "source"
        },
        "component-dir": "vendor/components"
    }
}