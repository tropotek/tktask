    $config['system.encrypt'] = '';

    /**
     * Set the site timezone for PHP and MySQL
     */
    //$config['php.date.timezone']    = 'Australia/Melbourne';

    /*
     * Email template relative path
     */
    $config['system.mail.template'] = '/html/templates/mail.default.xtpl';

    /*
     * DB secret API key
